{
    "_comment": "IMPORTANT : go to the wiki page to know about options configuration https://github.com/servocoder/RichFilemanager/wiki/Configuration-options",
    "options": {
        "theme": "default",
        "showTitleAttr": false,
        "showConfirmation": true,
        "browseOnly": false,
        "fileSorting": "NAME_ASC",
        "folderPosition": "top",
        "quickSelect": false,
        "logger": false,
        "allowFolderDownload": true,
        "allowChangeExtensions": false,
        "capabilities": [
            "select",
            "upload",
            "download",
            "rename",
            "copy",
            "move",
            "delete",
            "extract",
            "createFolder"
        ]
    },
    "language": {
        "default": "en",
        "available": ["cs", "en"]
    },
    "formatter": {
        "datetime": {
            "skeleton": "yMMMdHm"
        }
    },
    "filetree": {
        "enabled": false,
        "foldersOnly": false,
        "reloadOnClick": true,
        "expandSpeed": 200,
        "showLine": true,
        "width": 0,
        "minWidth": 0
    },
    "manager": {
        "defaultViewMode": "grid",
        "dblClickOpen": true,
        "selection": {
            "enabled": true,
            "useCtrlKey": true
        },
        "renderer": {
            "position": false,
            "indexFile": "readme.md"
        }
    },
    "api": {
        "lang": "java",
        "connectorUrl": "/filemanager/api",
        "uploadConnectorUrl" : "/uploadManager/upload",
        "requestParams": {
            "GET": {},
            "POST": {},
            "MIXED": {}
        }
    },
    "upload": {
        "multiple": true,
        "maxNumberOfFiles": 5,
        "chunkSize": false
    },
    "clipboard": {
        "enabled": false,
        "encodeCopyUrl": false
    },
    "filter": {
        "image": ["jpg", "jpeg", "gif", "png", "svg"],
        "media": ["ogv", "avi", "mkv", "mp4", "webm", "m4v", "ogg", "mp3", "wav"],
        "office": ["txt", "pdf", "odp", "ods", "odt", "rtf", "doc", "docx", "xls", "xlsx", "ppt", "pptx", "csv", "md"],
        "archive": ["zip", "tar", "rar"],
        "audio": ["ogg", "mp3", "wav"],
        "video": ["ogv", "avi", "mkv", "mp4", "webm", "m4v"],
        "csv": ["csv"],
        "pcap" : ["pcap"],
        "txt" : ["txt"],
        "log" : ["log"],
        "json" : ["json"]
    },
    "search": {
        "enabled": true,
        "recursive": false,
        "caseSensitive": false,
        "typingDelay": 500
    },
    "viewer": {
        "absolutePath": false,
        "previewUrl": false,
        "image": {
            "enabled": true,
            "lazyLoad": true,
            "showThumbs": true,
            "thumbMaxWidth": 64,
            "extensions": [
                "jpg",
                "jpe",
                "jpeg",
                "gif",
                "png",
                "svg"
            ]
        },
        "video": {
            "enabled": false,
            "extensions": [
                "ogv",
                "mp4",
                "webm",
                "m4v"
            ],
            "playerWidth": 400,
            "playerHeight": 222
        },
        "audio": {
            "enabled": false,
            "extensions": [
                "ogg",
                "mp3",
                "wav"
            ]
        },
        "iframe": {
            "enabled": false,
            "extensions": [
                "htm",
                "html"
            ],
            "readerWidth": "95%",
            "readerHeight": "600"
        },
        "opendoc": {
            "enabled": false,
            "extensions": [
                "pdf",
                "odt",
                "odp",
                "ods"
            ],
            "readerWidth": "640",
            "readerHeight": "480"
        },
        "google": {
            "enabled": false,
            "extensions": [
                "doc",
                "docx",
                "xls",
                "xlsx",
                "ppt",
                "pptx"
            ],
            "readerWidth": "640",
            "readerHeight": "480"
        },
        "codeMirrorRenderer": {
            "enabled": false,
            "extensions": [
                "txt",
                "csv"
            ]
        },
        "markdownRenderer": {
            "enabled": false,
            "extensions": [
                "md"
            ]
        }
    },
    "editor": {
        "enabled": false,
        "theme": "default",
        "lineNumbers": true,
        "lineWrapping": true,
        "codeHighlight": true,
        "matchBrackets": true,
        "extensions": [
            "html",
            "txt",
            "csv",
            "md"
        ]
    },
    "customScrollbar": {
        "enabled": false,
        "theme": "inset-2-dark",
        "button": true
    },
    "extras": {
        "extra_js": [],
        "extra_js_async": true
    },
    "url": "https://github.com/servocoder/RichFilemanager",
    "version": "2.7.6"
}
